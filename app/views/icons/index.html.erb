</div>
<!-- [-] PAGE TITLE -->
<!-- [+] CATEGORY -->
<section class="icons-category">
<span></span>


</section>
<!-- [-] CATEGORY -->

<!-- [+] ICONS -->
<section class="icons-index-list">
<div class="list-iner">
  <div class="left-side-bar">
    <ul class="category-icons">

      <li><%= link_to "All icons", icons_path %></li>
      <% @categories.each do |cat| %>

      <li class="category"><%= link_to "#{cat}", "/icons?query=#{cat}"  %></li>
        <% end %>
    </ul>
  </div>
  <div class="right-side-bar">
    <ul class="icons-lists">
      <!-- [+] SINGLE ICON ITEM -->

      <% @icons.each do |icon| %>
      <% if icon.photo.attached? %>
       <li style="background:url(<%= cl_image_path(icon.photo.key) %>)">
          <% else %>
  <img src="https://phantom-marca.unidadeditorial.es/6325b621b1ec481729f0865211d0ed3f/resize/1320/f/jpg/assets/multimedia/imagenes/2020/11/25/16062940399517.jpg" alt="">
  <% end %>
      <!-- <li style="background:url('https://www.masterclass.com/course-images/attachments/PM3N5CPL1AhDizCfJSFhsZUi?width=300&height=533&fit=cover&dpr=2');"> -->
       <div class="hs-inner">
          <div class="title">
            <p class = "shadow"><strong><%= icon.name %></strong></p>
            <p class = "shadow"><%= icon.description %></p>
          </div>
          <button class="button" type="button" name="button"><%= link_to "Book", icon_path(icon) %></button>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</section>
<!-- [-] ICONS -->

</section>

