<div class="new-icon-form">
  <div class="border">
    <h1>Create a new Icon</h1>
    <p>
      <%= simple_form_for(@icon) do |f|%>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :category, collection: Icon::CATEGORIES %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
        </div>
        <div class="form-actions cols-m-6 align-self-center">
        <%= f.submit "Create Icon", class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
    </p>
  </div>
</div>
