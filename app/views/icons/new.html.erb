<div class="d-flex justify-content-center pt-5">
  <div class="border">
    <h1>Create a new Icon</h1>
    <p>
      <%= simple_form_for(@icon) do |f|%>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :photo, as: :file %>
          <%= f.input :category, collection: Icon::CATEGORIES %>
          <%= f.input :description %>
          <%= f.input :price %>
        </div>
        <div class="form-actions cols-m-6 align-self-center">
        <%= f.submit "Create Icon", class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
    </p>
  </div>
</div>
